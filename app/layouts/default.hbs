<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your App</title>
  <link rel="stylesheet" type="text/css" href="/assets/css/_remake.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/main.css">
</head>
<body>
  {{#if currentUser}}
    <a href="/user/logout">Logout</a>
  {{else}}
  <div class="float-left ml-0.5">
    <a class="nav__button inline-block mt-1 bg-cyan-500 hover:bg-cyan-600 text-white font-bold py-2 px-4 rounded" href="/user/signup">Sign up</a>
    &nbsp;
    <a class="nav__button inline-block mt-1 bg-cyan-500 hover:bg-cyan-600 text-white font-bold py-2 px-4 rounded" href="/user/login">Log in</a>
  </div>

  <div class="float-right mr-0.5">
    <a class="nav__button inline-block mt-1 bg-cyan-500 hover:bg-cyan-600 text-white font-bold py-2 px-4 rounded" href="/user/index">Welcome</a>
    &nbsp;
    <a class="nav__button inline-block mt-1 bg-cyan-500 hover:bg-cyan-600 text-white font-bold py-2 px-4 rounded" href="/user/about-us">About Us</a>
  </div>

  {{/if}}
  {{!-- Show errors --}}
  {{#if flashErrors }}
    {{#each flashErrors }}
      <div>{{ this }}</div>
    {{/each}}
  {{/if}}
  {{!-- Show success messages --}}
  {{#if flashSuccesses }}
    {{#each flashSuccesses }}
      <div>{{ this }}</div>
    {{/each}}
  {{/if}}
  {{> yield }}
  {{#if isPageAuthor}}
    {{!-- Prevent loading the Remake framework if the page isn't editable --}}
    <script src="/assets/js/vendor/Sortable.min.js"></script>
    <script src="/assets/js/vendor/crostini.min.js"></script>
    <script src="/remake/js/remake.min.js"></script>
    <script src="/assets/js/remake-init.js"></script>
  {{/if}}
  <script src="/assets/js/main.js"></script>
</body>
</html>
